{
    "manifest_version": 3,
    "name": "Tab Manager",
    "version": "1.0",
    "description": "Organize and manage your browser tabs efficiently.",
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "unlimitedStorage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
    "icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }
  